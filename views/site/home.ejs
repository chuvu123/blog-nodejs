<% extend('./layouts/application', data.title) %>

<!-- Document Wrapper
============================================= -->
<div id="wrapper" class="clearfix">

<%- include('./common/header') -%>
	<%- include('./common/page-title') -%>
	<!-- Content
	============================================= -->
	<section id="content">

		<div class="content-wrap">

			<div class="container clearfix">

				<!-- Post Content
				============================================= -->
				<div class="postcontent nobottommargin clearfix">
					<% data.rows.forEach((row, index) => { %>
					<!-- Posts
					============================================= -->
					<div id="posts" class="small-thumbs">

						<div class="entry clearfix">
							<div class="entry-image">
								<a href="<%= row.post_image %>" data-lightbox="image"><img class="image_fade" src="<%= row.post_image %>" alt="Standard Post with Image"></a>
							</div>
							<div class="entry-c">
								<div class="entry-title">
									<h2><a href="/<%= row.post_slug %>"><%= row.post_title %></a></h2>
								</div>
								<ul class="entry-meta clearfix">
									<li><i class="icon-calendar3"></i> <%= row.create_at.toLocaleString() %></li>
									<% if (index < data.rows.length-1) { %>
									<li><a href="#"><i class="icon-user"></i><%= data.users[index].display_name; %></a></li>
									<% } %>
								</ul>
								<div class="entry-content">
									<p><%= row.post_description %></p>
									<a href="/<%= row.post_slug %>"class="more-link">Read More</a>
								</div>
							</div>
						</div>

					</div><!-- #posts end -->
					<% }) %>

					<!-- Pagination
					============================================= -->
					<div class="row mb-3">
						<div class="col-12">
							<a href="#" class="btn btn-outline-secondary float-left">&larr; Older</a>
							<a href="#" class="btn btn-outline-dark float-right">Newer &rarr;</a>
						</div>
					</div>
					<!-- .pager end -->

				</div><!-- .postcontent end -->
				<%- include('./common/sidebar') -%>
			</div>

		</div>

	</section><!-- #content end -->

<%- include('./common/footer') -%>

</div><!-- #wrapper end -->

