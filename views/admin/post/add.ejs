<% extend('../layouts/application', title) %>
<!-- BEGIN HEADER -->
<%- include('../common/top-header') -%>
<!-- END HEADER -->
<div class="clearfix">
</div>
<!-- BEGIN CONTAINER -->
<div class="page-container">
	<!-- BEGIN SIDEBAR -->
	<%- include('../common/sidebar-left') -%>
	<!-- END SIDEBAR -->
	<!-- BEGIN CONTENT -->
	<div class="page-content-wrapper">
		<div class="page-content">
			<!-- BEGIN SAMPLE PORTLET CONFIGURATION MODAL FORM-->
			<div class="modal fade" id="portlet-config" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
				<div class="modal-dialog">
					<div class="modal-content">
						<div class="modal-header">
							<button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
							<h4 class="modal-title">Media</h4>
						</div>
						<div class="modal-body">
							 Widget settings form goes here
						</div>
						<div class="modal-footer">
							<button type="button" class="btn blue">Save changes</button>
							<button type="button" class="btn default" data-dismiss="modal">Close</button>
						</div>
					</div>
					<!-- /.modal-content -->
				</div>
				<!-- /.modal-dialog -->
			</div>
			<!-- /.modal -->
			<!-- END SAMPLE PORTLET CONFIGURATION MODAL FORM-->
			<!-- BEGIN PAGE HEADER-->
			<%- include('../common/page-header') -%>
			<!-- END PAGE HEADER-->
			<!-- BEGIN PAGE CONTENT-->

			<div class="row">
				<div class="col-md-12">
					<!-- BEGIN VALIDATION STATES-->
					<form action="" method="POST" role="form" class="form-body">
						<input type="hidden" name="author" value="<%= userLogin._id %>">
						<input id="slug" type="hidden" name="slug" value="">
						<input id="image_url" type="hidden" name="image_url" value="">

						<div class="add-post-left col-sm-9">
							
							<div class="alert alert-danger display-hide">
								<button class="close" data-close="alert"></button>
								You have some form errors. Please check below.
							</div>
							<div class="alert alert-success display-hide">
								<button class="close" data-close="alert"></button>
								Your form validation is successful!
							</div>
							<div class="form-group">
								<label class="control-label sr-only">Title</label>
								<input id="title" type="text" name="title" data-required="1" class="form-control" placeholder="Enter title here" />
							</div>
							<div class="form-group">
								<label class="control-label">Permalink: <a href="#" id="permalink"></a></label>
							</div>
							<div class="form-group last">
								<textarea class="wysihtml5 form-control" rows="15" name="content" data-error-container="#editor1_error" placeholder="Enter content here"></textarea>
								<div id="editor1_error">
								</div>
							</div>
							<div class="form-group last">
								<textarea class="form-control" rows="4" name="description"  placeholder="Enter description here"></textarea>
							</div>

						</div>
						<div class="add-post-left col-sm-3">
							<div class="panel panel-info">
								<div class="panel-heading">
									<h3 class="panel-title">Publish</h3>
								</div>
								<div class="panel-body">
									<select class="form-control select2me sl-post-cat" name="category">
										<option value="0">Select category...</option>
										<% data.cat.forEach(i => {%>
										<option value="<%= i._id%>"><%= i.name %></option>
										<% }) %>
									</select>
									<select class="form-control select2me" name="status">
										<option value="publish">Publish</option>
										<option value="hide">Hide</option>
										<option value="pending">Pending</option>
									</select>
								</div>
							</div>
							<div class="panel panel-info">
								<div class="panel-heading">
									<h3 class="panel-title">Featured Image</h3>
								</div>
								<div class="panel-body">
									<img id="image-isset" src="" alt="" class="img-responsive">
									<a id="set-featured-image" class="" data-toggle="modal" href='#modal-id'>Set featured image</a>
									<div class="modal fade" id="modal-id">
										<div class="modal-dialog" id="modal-set-img">
											<div class="modal-content">
												<div class="modal-header">
													<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
													<h4 class="modal-title">Modal title</h4>
												</div>
												<div class="modal-body">
													<div class="row">
														<div class="col-sm-9">
															<div class="row" id="list-img">
																<% data.media.forEach(i => {%>
																<div class="col-sm-2">
																	<img id="<%= i._id %>" src="<%= i.path %>" alt="" class="custom-img img-responsive">
																</div>
																<% }) %>
															</div>
														</div>
														<div class="col-sm-3">
															<div class="athh">
																ATTACHMENT DETAILS
																<div class="row">
																	<div class="col-sm-6">
																		<img id="img-detail" alt="" class="img-responsive">
																	</div>
																	<div class="col-sm-6">
																		<div id="filename"></div>
																		<div id="uploaded"></div>
																		<div id="filesize"></div>
																		<div id="delete-attachment"></div>
																	</div>
																</div>
																<div class="form-group">
																	<label class="" for="">URL</label>
																	<input type="email" class="form-control" id="image-url" placeholder="" disabled>
																</div>
																<button id="submitSet" data-dismiss="modal" type="button" class="btn btn-info">Set featured image</button>
															</div>
														</div>
													</div>
												</div>
											</div>

										</div>
									</div>
								</div>
							</div>
							<button id="btnPostAdd" type="submit" class="btn btn-info">Publish</button>
						</div>
					</form>
				</div>
			</div>
			<!-- END PAGE CONTENT-->
		</div>
	</div>
	<!-- END CONTENT -->
	<!-- BEGIN QUICK SIDEBAR -->
	<a href="javascript:;" class="page-quick-sidebar-toggler"><i class="icon-close"></i></a>
	<%- include('../common/quick-sidebar') -%>
	<!-- END QUICK SIDEBAR -->
</div>
<!-- END CONTAINER -->
<!-- BEGIN FOOTER -->
<%- include('../common/page-footer') -%>
<!-- END FOOTER -->