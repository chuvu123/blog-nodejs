<% extend('../layouts/application', title) %>
<!-- BEGIN HEADER -->
<%- include('../common/top-header') -%>
<!-- END HEADER -->
<div class="clearfix">
</div>
<!-- BEGIN CONTAINER -->
<div class="page-container">
	<!-- BEGIN SIDEBAR -->
	<%- include('../common/sidebar-left') -%>
	<!-- END SIDEBAR -->
	<!-- BEGIN CONTENT -->
	<div class="page-content-wrapper">
		<div class="page-content">
			<!-- BEGIN SAMPLE PORTLET CONFIGURATION MODAL FORM-->
			<div class="modal fade" id="portlet-config" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
				<div class="modal-dialog">
					<div class="modal-content">
						<div class="modal-header">
							<button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
							<h4 class="modal-title">Modal title</h4>
						</div>
						<div class="modal-body">
							 Widget settings form goes here
						</div>
						<div class="modal-footer">
							<button type="button" class="btn blue">Save changes</button>
							<button type="button" class="btn default" data-dismiss="modal">Close</button>
						</div>
					</div>
					<!-- /.modal-content -->
				</div>
				<!-- /.modal-dialog -->
			</div>
			<!-- /.modal -->
			<!-- END SAMPLE PORTLET CONFIGURATION MODAL FORM-->
			<!-- BEGIN PAGE HEADER-->
			<%- include('../common/page-header') -%>
			<!-- END PAGE HEADER-->
			<!-- BEGIN PAGE CONTENT-->

			<div class="row">
				<div class="col-md-12">
					<!-- BEGIN VALIDATION STATES-->
					<form action="" method="POST" role="form" class="form-body">
						<div class="add-post-left col-sm-9">
							
							<div class="alert alert-danger display-hide">
								<button class="close" data-close="alert"></button>
								You have some form errors. Please check below.
							</div>
							<div class="alert alert-success display-hide">
								<button class="close" data-close="alert"></button>
								Your form validation is successful!
							</div>
							<div class="form-group">
								<label class="control-label sr-only">Username</label>
								<input type="text" name="username" data-required="1" class="form-control" placeholder="Username" required />
							</div>
							<div class="form-group">
								<label class="control-label sr-only">Email</label>
								<input type="email" name="email" data-required="1" class="form-control" placeholder="Email" required />
							</div>
							<div class="form-group">
								<label class="control-label sr-only">Display name</label>
								<input type="text" name="displayName" data-required="1" class="form-control" placeholder="Display name" required />
							</div>
							<div class="form-group">
								<label class="control-label sr-only">Password</label>
								<input type="password" name="password" data-required="1" class="form-control" placeholder="Password" required />
							</div>
							<div class="form-group">
								<label class="control-label sr-only">Password</label>
								<select name="roles" class="form-control" required>
									<option value="0">Administrator</option>
									<option value="1">Sub Admin</option>
									<option value="2">User</option>
								</select>
							</div>
							<button type="submit" class="btn btn-success">Add New User</button>
	

						</div>
					</form>
				</div>
			</div>
			<!-- END PAGE CONTENT-->
		</div>
	</div>
	<!-- END CONTENT -->
	<!-- BEGIN QUICK SIDEBAR -->
	<a href="javascript:;" class="page-quick-sidebar-toggler"><i class="icon-close"></i></a>
	<%- include('../common/quick-sidebar') -%>
	<!-- END QUICK SIDEBAR -->
</div>
<!-- END CONTAINER -->
<!-- BEGIN FOOTER -->
<%- include('../common/page-footer') -%>
<!-- END FOOTER -->
