<% extend('../layouts/application', title) %>


<!-- BEGIN HEADER -->
<%- include('../common/top-header') -%>
<!-- END HEADER -->
<div class="clearfix">
</div>
<!-- BEGIN CONTAINER -->
<div class="page-container">
	<!-- BEGIN SIDEBAR -->
	<%- include('../common/sidebar-left') -%>
	<!-- END SIDEBAR -->
	<!-- BEGIN CONTENT -->
	<div class="page-content-wrapper">
		<div class="page-content">
			<!-- BEGIN SAMPLE PORTLET CONFIGURATION MODAL FORM-->
			<div class="modal fade" id="portlet-config" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
				<div class="modal-dialog">
					<div class="modal-content">
						<div class="modal-header">
							<button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
							<h4 class="modal-title">Modal title</h4>
						</div>
						<div class="modal-body">
							 Widget settings form goes here
						</div>
						<div class="modal-footer">
							<button type="button" class="btn blue">Save changes</button>
							<button type="button" class="btn default" data-dismiss="modal">Close</button>
						</div>
					</div>
					<!-- /.modal-content -->
				</div>
				<!-- /.modal-dialog -->
			</div>
			<!-- /.modal -->
			<!-- END SAMPLE PORTLET CONFIGURATION MODAL FORM-->
			<!-- BEGIN PAGE HEADER-->
			<%- include('../common/page-header') -%>
			<!-- END PAGE HEADER-->
			<!-- BEGIN PAGE CONTENT-->
			<div class="row">
				<div class="col-md-12">
					<!-- BEGIN EXAMPLE TABLE PORTLET-->
					<div class="portlet box green-haze">
						<div class="portlet-title">
							<div class="caption">
								<i class="fa fa-globe"></i>Users
							</div>
							<div class="tools">
								<a href="javascript:;" class="reload">
								</a>
								<!-- <a href="javascript:;" class="remove">
								</a> -->
							</div>
						</div>
						<div class="portlet-body">
							<table class="table table-striped table-bordered table-hover" id="sample_2">
							<thead>
								<tr>
									<th>#</th>
									<th>Username</th>
									<th>Password</th>
									<th>Email</th>								
									<th>Avatar</th>
									<th>Display name</th>
									<th>Role</th>
									<th>registered</th>
									<th>Action</th>
								</tr>
							</thead>
							<tbody>
								<% data.forEach((x, index) => {%>
								<tr>
									<td><%= index+1 %></td>
									<td><%= x.user_login %></td>
									<td><%= x.user_pass %></td>
									<td><%= x.user_email %></td>
									<td><%= x.image_url %></td>
									<td><%= x.display_name %></td>
									<% if(x.roles == 0) { %>
										<td><%= "Administrator" %></td>
									<% } else if(x.roles == 1) { %>
										<td><%= "Sub Admin" %></td>
									<% } else if(x.roles == 2) { %>
										<td><%= "User" %></td>
									<% } else { %>
										<td><%= "" %></td>
									<% } %>
									<td><%= x.user_registered.toLocaleString(); %></td>
									<td>
										<a href="/admin/users/<%= x._id %>/edit" class="btn btn-info btn-xs btnEdit">Edit</a>
										<a onclick="return confirm('Are you delete?')" href="/admin/users/<%= x._id %>/delete" class="btn btn-danger btn-xs btnDelete">Delete</a>
									</td>
								</tr>
								<% }) %>
								<script type="text/javascript">
									var x = document.getElementsByClassName('btnEdit')
									for (var i = 0; i < x.length; i++) {
										x[i].addEventListener('click', () => {
											if (<%= userLogin.roles %> > 1) {
												alert('Bạn không có quyền sửa !');
												// return false;
											}
										});
									}

									var y = document.getElementsByClassName('btnDelete')
									console.log(x.length);
									for (var i = 0; i < y.length; i++) {
										y[i].addEventListener('click', () => {
											if (<%= userLogin.roles %> > 0) {
												alert('Bạn không có quyền xóa !');
												// return false;
											}
										});
									}
								</script>
							</tbody>
							</table>
						</div>
					</div>
					<!-- END EXAMPLE TABLE PORTLET-->
				</div>
			</div>
			<!-- END PAGE CONTENT-->
		</div>
	</div>
	<!-- END CONTENT -->
	<!-- BEGIN QUICK SIDEBAR -->
	<a href="javascript:;" class="page-quick-sidebar-toggler"><i class="icon-close"></i></a>
	<%- include('../common/quick-sidebar') -%>
	<!-- END QUICK SIDEBAR -->
</div>
<!-- END CONTAINER -->
<!-- BEGIN FOOTER -->
<%- include('../common/page-footer') -%>
<!-- END FOOTER -->

